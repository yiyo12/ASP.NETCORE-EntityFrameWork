@model EditarRolViewModel

@{
    ViewBag.Title = "Editar Rol";

}


    <h1>Editar Rol</h1>

    <form method="post" class="mt-3">

        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" /> 
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="nombreRol" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="nombreRol" class="form-control" />
                <span asp-validation-for="nombreRol" class="text-danger"></span>
            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary" style="width:auto">Editar</button>
                <a asp-action="ListarRoles" class="btn btn-primary" style="width:auto">Cancelar</a>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3>Usuarios con este Rol</h3>
            </div>
        </div>


        <div class="card-body">

            @if (Model.Usuarios.Any())
            {
                foreach (var user in Model.Usuarios)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">Ninguno por ahora</h5>

            }
        </div>

        <div class="card-footer">
            <a asp-controller="Administracion" asp-action="EditarRolUsuario" class="btn btn-primary" 
               asp-route-rolId="@Model.Id" style="width:auto">Crear o borrar usuario</a>
           
        </div>


    </form>