@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewBag.Title = "Listado de roles";
}


<h1>Lista de roles</h1>

@if (Model.Any())
{
    <a class="btn btn-dark mb-3" style="width:auto" asp-action="CrearRol" asp-controller="Administracion">
        Crear nuevo rol
    </a>

    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role ID: @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>

            <div class="card-footer">





                <form method="post" asp-action="BorrarRol" asp-route-id="@role.Id">
                    <a asp-controller="Administracion" asp-action="EditarRol"
                       asp-route-id="@role.Id" class="btn btn-success">Editar</a>


                    @*<button type="submit" class="btn btn-danger">Borrar</button>*@

                    <span id="confirmBorrarSpan_@role.Id" style="display:none">
                        <span>Seguro quiere borrar este elemento</span>
                        <button type="submit" class="btn btn-danger">  Si  </button>
                        <a class="btn btn-outline-success"
                           onclick="confirmarBorrar('@role.Id', false)">no</a>
                    </span>

                    <span id="BorrarSpan_@role.Id">
                        <a class="btn btn-outline-success"
                           onclick="confirmarBorrar('@role.Id', true)">Borrar</a>
                    </span>

                </form>



            </div>

        </div>
    }

}
else
{
    <div class="card">
        <div class="card-header">
            Todavia no hay roles creados
        </div>

        <div class="card-body">

            <h5 class="card-title">Usa este boton para crear un nuevo rol</h5>
            <a class="btn btn-success" style="width:auto"
               asp-controller="Administracion" asp-action="CrearRol">Crear Rol</a>
        </div>


    </div>
}


@section Scripts {

    <script src="~/Js/Miscript.js"></script>
}